{% extends "template.twig" %}

{% block title %}Session - Edit{% endblock %}

{% block head %}
    {{ parent() }}
{% endblock %}

{% block content %}
    <form name="session" method="post" class="form-horizontal">
        <div class="form-group">
            {{ form_label(form.researcher, null, { 'label_attr' : { 'class' : 'col-sm-2 control-label' } }) }}
            <div class="col-sm-8">
                {{ form_widget(form.researcher, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.subjectOne, null, { 'label_attr' : { 'class' : 'col-sm-2 control-label' } }) }}
            <div class="col-sm-8">
                {{ form_widget(form.subjectOne, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.subjectTwo, null, { 'label_attr' : { 'class' : 'col-sm-2 control-label' } }) }}
            <div class="col-sm-8">
                {{ form_widget(form.subjectTwo, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.scenarioTemplate, null, { 'label_attr' : { 'class' : 'col-sm-2 control-label' } }) }}
            <div class="col-sm-8">
                {{ form_widget(form.scenarioTemplate, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-8">
                <input type="submit" class="btn btn-default" />
            </div>
        </div>
    </form>
{% endblock %}

{% block scripts %}
    {{ parent() }}
{% endblock %}
