{% extends "template.twig" %}

{% block title %}Session - List{% endblock %}

{% block head %}
    {{ parent() }}
{% endblock %}

{% block header %}
    {{ parent() }}
{% endblock %}

{% block content %}
    <h1>Sessions</h1>

    <a href="{{ path('session_create') }}">New</a>

    {% if elements is not empty %}
    <ul>
        {% for session in elements %}
        <li>
            {{ session.scenario.name }}
            {% if session.results|length == 0 %}
            <a href="{{ path('session_edit', { sessionId : session.id }) }}">edit</a>
            {% endif %}
            <a href="{{ path('observer', { sessionId : session.id }) }}">observer</a>
            {% if session.results|length < session.numberOfSequences %}
                <a href="{{ path('position_one', { sessionId : session.id }) }}">Position #1</a>
                <a href="{{ path('position_two', { sessionId : session.id }) }}">Position #2</a>
            {% endif %}
        </li>
        {% endfor %}
    </ul>
    {% else %}
        <p>No session here.</p>
    {% endif %}
{% endblock %}
