{% extends "template.twig" %}

{% block title %}User - Edit{% endblock %}

{% block head %}
    {{ parent() }}
{% endblock %}

{% block content %}
    <form name="user" method="post" class="form-horizontal">
        <div class="form-group">
            {{ form_label(form.userName, null, { 'label_attr' : { 'class' : 'col-sm-2 control-label' } }) }}
            <div class="col-sm-8">
                {{ form_widget(form.userName, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.password, null, { 'label_attr' : { 'class' : 'col-sm-2 control-label' } }) }}
            <div class="col-sm-8">
                {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.roles, null, { 'label_attr' : { 'class' : 'col-sm-2 control-label' } }) }}
            <div class="col-sm-8">
                <ul class="list-group">
                {% for role in form.roles %}
                    <li class="list-group-item">
                        {{ form_widget(role) }}
                        {{ form_label(role) }}
                    </li>
                {% endfor %}
                </ul>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-8">
                <input type="submit" class="btn btn-default" />
            </div>
        </div>
    </form>
{% endblock %}

{% block scripts %}
    {{ parent() }}
{% endblock %}
