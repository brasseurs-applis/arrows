{% extends "template.twig" %}

{% block title %}User - List{% endblock %}

{% block head %}
    {{ parent() }}
{% endblock %}

{% block header %}
    {{ parent() }}
{% endblock %}

{% block content %}
    <nav>
        <a href="{{ path('user_create') }}" class="btn btn-default">New</a>
    </nav>

    {% if elements is not empty %}
    <ul class="list-group">
        {% for user in elements %}
        <li class="list-group-item">
            {{ user.userName }}
            <span class="tools pull-right">
                <a href="{{ path('user_edit', { userId : user.id }) }}">
                    <span class="glyphicon glyphicon-pencil" title="edit"></span>
                </a>
            </span>
        </li>
        {% endfor %}
    </ul>

    <nav aria-label="Navigation">
        <ul class="pagination">
            <li {% if pagination.page == 1 %}class="disabled"{% endif %}>
                <a href="{{ path('user_list') }}?page={{ pagination.page-1 }}" aria-label="Previous">
            <span>
                <span aria-hidden="true">&laquo;</span>
            </span>
                </a>
            </li>

            {% for index in range(1, pagination.totalPages) %}
                <li {% if index == pagination.page %}class="active"{% endif %}>
                    <a href="{{ path('user_list') }}?page={{ index }}">{{ index }}</a>
                </li>
            {% endfor %}
            <li {% if pagination.page == pagination.totalPages %}class="disabled"{% endif %}>
                <a href="{{ path('user_list') }}?page={{ pagination.page+1 }}" aria-label="Next">
            <span>
                <span aria-hidden="true">&raquo;</span>
            </span>
                </a>
            </li>
        </ul>
    </nav>
    {% else %}
    <p>No user here.</p>
    {% endif %}
{% endblock %}

{% block scripts %}
    {{ parent() }}
{% endblock %}
