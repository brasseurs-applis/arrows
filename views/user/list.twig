{% extends "template.twig" %}

{% block title %}User - List{% endblock %}

{% block head %}
    {{ parent() }}
{% endblock %}

{% block header %}
    {{ parent() }}
{% endblock %}

{% block content %}
    <nav>
        <a href="{{ path('user_create') }}" class="btn btn-default">New</a>
    </nav>

    {% if elements is not empty %}
    <ul class="list-group">
        {% for user in elements %}
        <li class="list-group-item">
            {{ user.userName }}
            <span class="tools pull-right">
                <a href="{{ path('user_edit', { userId : user.id }) }}">
                    <span class="glyphicon glyphicon-pencil" title="edit"></span>
                </a>
            </span>
        </li>
        {% endfor %}
    </ul>

    {% include 'parts/pagination.twig' with {'route': 'user_list'} %}

    {% else %}
    <p>No user here.</p>
    {% endif %}
{% endblock %}

{% block scripts %}
    {{ parent() }}
{% endblock %}
