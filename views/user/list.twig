{% extends "template.twig" %}

{% block title %}User - List{% endblock %}

{% block head %}
    {{ parent() }}
{% endblock %}

{% block content %}
    <h1>User</h1>

    <a href="{{ path('user_create') }}">New</a>

    {% if users is not empty %}
    <ul>
        {% for user in users %}
        <li>{{ user.userName }} <a href="{{ path('user_edit', { userId : user.id }) }}">edit</a></li>
        {% endfor %}
    </ul>
    {% else %}
        <p>No user here.</p>
    {% endif %}
{% endblock %}
